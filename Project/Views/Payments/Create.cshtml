    <div style="margin-left:280px">
        <h1 style="margin-left:850px"><b>Payment Form</b></h1>
        <div class="row">
            <div class="col-md-8">
                <form style="align-content:center;align-items:center;padding-left:400px;" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Subscription" class="control-label"></label><br />
                        <span style="padding-left: 6px;font-size: 2rem;">
                            <input type="radio" id="bas"
                                   onclick="Basic()" asp-for="Subscription" value="Basic" />Basic
                        </span>
                        <span style="padding-left:6px;font-size:2rem">
                            <input type="radio" id="std"
                                   oninput="Basic()" asp-for="Subscription" value="Standard" />Standard
                        </span>
                        <span style="padding-left:6px;font-size:2rem">
                            <input type="radio" id="pre"
                                   onclick="Basic()" asp-for="Subscription" value="Premium" />Premium
                        </span>
                    </div>
                    <div class="form-group">
                        <label style="font-size:2rem;" asp-for="CardNumber" class="control-label"></label>
                        <input type="text" asp-for="CardNumber" placeholder="Card Number" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         <label asp-for="CVV" class="control-label"></label>
                         <input type="password" placeholder="CVV" asp-for="CVV"  />
                         <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         <label asp-for="ExpiryDate" class="control-label"></label>
                         <input type="text" asp-for="ExpiryDate" placeholder="MM/YY"  />
                         <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         <label asp-for="Amount" class="control-label"></label>
                         <input type="text" style="font-size:2rem;" id="price" asp-for="Amount" placeholder="Amount"  />
                         <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
      
                    <div class="form-group">
                        <input type="submit" style="padding:15px 35px; margin-left:480px;font-size:30px;align-items:center;" value="Pay" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

