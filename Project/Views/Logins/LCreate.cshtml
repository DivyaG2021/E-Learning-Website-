@model Project.Models.Login

@{
    ViewData["Title"] = "Registration";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Login Form</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        input[type=text], select {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type=radio] {
        }
    </style>
</head>

<body style="justify-content:center;justify-items:center; background-color:lightblue;padding-top:150px">
    <div style="margin-left:280px">
        <h1 style="margin-left:860px"><b>Login Form</b></h1>
        <div class="row">
            <div class="col-md-8">
                <form style="align-content:center;align-items:center;padding-left:400px;" asp-action="LCreate" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label style="font-size:2rem;" asp-for="Username" class="control-label"></label>
                        <input type="text" id="uname" asp-for="Username" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="font-size:2rem;" asp-for="Password" class="control-label"></label>
                        <input type="text" id="pass" asp-for="Password" placeholder=" Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" style="padding:15px 35px; margin-left:480px;font-size:30px;align-items:center;" value="Login" class="btn btn-primary" />
                    </div>
                </form>
               <div style="text-align:center;padding-left:430px">
                    @Html.ActionLink("New User", "Rcreate", "Logins")
                </div>

            </div>
        </div>
    </div>
  
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
